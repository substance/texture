  </define>
  <define name="term">
    <element name="term">
      <ref name="term-attlist"/>
      <ref name="term-model"/>
    </element>
  </define>
  <define name="term-model">
    <choice>
      <oneOrMore>
        <choice>
          <text/>
          <ref name="all-phrase"/>
        </choice>
      </oneOrMore>
      <choice>
        <ref name="block-math.class"/>
        <ref name="chem-struct-wrap.class"/>
        <ref name="simple-display-noalt.class"/>
